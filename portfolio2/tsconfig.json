{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", 
    "paths": {
      "@/*": ["*"] // Define the alias `@` to point to `src`
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../portfolio/src/components/ui/container-scroll-animation.tsx", "../portfolio/src/components/ui/3d-marquee.tsx", "../portfolio/src/components/ui/animated-testimonials.tsx", "../portfolio/src/components/ui/canvas-reveal-effect.tsx"],
  "exclude": ["node_modules"]
  
  
}
